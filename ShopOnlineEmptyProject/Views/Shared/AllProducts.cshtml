@model Product

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" />
    <h3 style="margin-top:15px;">@Model.name</h3>
    <p>@Model.shortDesc</p>
    <p>Price: @Model.price.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))</p>
    <p><a class="btn btn-warning" href="#">Подробнее</a></p>
</div>
